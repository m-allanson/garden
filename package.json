{
  "name": "toast-default-starter",
  "version": "1.0.0",
  "type": "module",
  "main": "index.js",
  "author": "christopherbiscardi <chris@christopherbiscardi.com> (@chrisbiscardi)",
  "license": "MIT",
  "scripts": {
    "serve": "serve public",
    "postinstall": "breadbox --dest public/web_modules",
    "build": "concurrently --names \"css,toast\" -c \"bgCyan.black,bgMagenta.black\" \"npm:build:css\" \"npm:build:site\"",
    "build:css": "postcss --config legacy-commonjs index.css -o public/styles.css",
    "build:site": "toast incremental .",
    "postbuild": "node scripts/minify-js.js",
    "watch": "nodemon --watch src --watch content --ext mdx,js --exec npm run build"
  },
  "dependencies": {
    "@sector/breadbox": "^0.0.4",
    "@toastdotdev/mdx": "^0.1.3",
    "concurrently": "^5.3.0",
    "toast": "^0.3.30"
  },
  "devDependencies": {
    "autoprefixer": "^10.2.4",
    "esbuild": "^0.8.43",
    "nodemon": "^2.0.7",
    "postcss": "^8.1.6",
    "postcss-cli": "^8.2.0",
    "serve": "^11.3.2"
  },
  "snowpack": {
    "exclude": [
      "public/**/*",
      "scripts/**",
      "toast.js"
    ],
    "installOptions": {
      "alias": {
        "react": "preact/compat"
      }
    },
    "knownEntrypoints": [
      "preact/hooks",
      "preact"
    ]
  },
  "volta": {
    "node": "14.15.4",
    "npm": "7.5.2"
  }
}
